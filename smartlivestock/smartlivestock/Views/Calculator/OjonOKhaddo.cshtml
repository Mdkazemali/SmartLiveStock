                                function moveToNextInput(event, nextInputId) {
                                    if (event.key === 'Enter') {
                                        event.preventDefault();

                                        const currentInput = event.target;
                                        const allInputs = document.querySelectorAll('input'); // Get all input fields
                                        const printElement = document.getElementById('print');

                                        let nextIndex = -1;

                                        // Find the index of the current input
                                        for (let i = 0; i < allInputs.length; i++) {
                                            if (allInputs[i] === currentInput) {
                                                nextIndex = i + 1;
                                                break;
                                            }
                                        }

                                        if (nextIndex < allInputs.length) {
                                            // If there is a next input, select it
                                            allInputs[nextIndex].select();
                                        } else if (printElement) {
                                            // If it's the last input, focus on the print button
                                            printElement.focus();
                                        }
                                    }
                                }

