<script>
    function calculateWeight() {
        // Get input values
        var length = parseFloat(document.getElementById('lengthInput').value) || 0;
        var heap = parseFloat(document.getElementById('heapInput').value) || 0;

        // Calculate weight using the formula Kg = Length * Heap * Heap
        var weight = (length * heap * heap) / 660;

        // Display the result
        document.getElementById('result').innerText = weight.toFixed(2) + ' Kg';
    }

  

</script>

