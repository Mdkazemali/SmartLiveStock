@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<style>
    .table {
        border: black;
    }
</style>


<a asp-action="Create" style="padding:5px;" class="btn btn-primary">Create New Role</a>
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=>model.Id)</th>
            <th>@Html.DisplayNameFor(model=>model.Name)</th>
            <th>@Html.DisplayNameFor(model=>model.NormalizedName)</th>
            <th>Controller</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem=>item.Id)</td>
                <td>@Html.DisplayFor(modelitem=>item.Name)</td>
                <td>@Html.DisplayFor(modelitem=>item.NormalizedName)</td>
                <td>
                    @if (item.Name != "System" && item.Name !="User")
                    {
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.Id">Delete</a>
                    }
                    
                </td>
            </tr>        

        }
    </tbody>
</table>