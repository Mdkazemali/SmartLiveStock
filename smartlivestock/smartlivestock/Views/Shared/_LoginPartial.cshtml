        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            /* Change color on hover */
            .dropdown-content a:hover {
                background-color: #0d6efd;
                color: white;
            }

    /* Show the dropdown content on hover */
    .dropdown:hover .dropdown-content {
        display: block;
