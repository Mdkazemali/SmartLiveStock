    /* Style the dropdown button and container */
    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-button {
        background-color: #0d6efd;
        color: white;
        padding: 10px;
        border: none;
        cursor: pointer;
    }

        .dropdown-button:hover {
            background-color: #0a2efd;
            color: white;
        }



    /* Style the dropdown content (hidden by default) */
    .dropdown-content {
        display: none;
