                <td style="border:none; padding: 4px; text-align: left;">
                    @species @Model.First().SpeciesName
                </td>
                <td style="border:none; padding: 4px; text-align: left;">
                    @Model.First().SpeciesGender
                </td>
                <td style="border:none; padding: 4px; text-align: left;">
                    @Model.First().SpeciesAges @din
