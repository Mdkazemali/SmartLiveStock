        <table style="border-collapse:collapse; width:100%; margin:auto; border:1px solid black; border-radius:20px;">
            <tr>
                <td style="border:none; padding: 4px; text-align: left;">
                    @woner @Model.First().ReName
                </td>
                <td style="border:none; padding: 4px; text-align: left;">
                    @ptid
                </td>
                <td style="border:none; padding: 4px; text-align: left;">
